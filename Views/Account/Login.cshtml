@model LoginViewModel
@{
    ViewData["Title"] = "Login";
    Layout = null;
}

<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Login - Sistema</title>
    <link href="https://fonts.googleapis.com/css2?family=Open+Sans:wght@400;500;600;700&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Material+Symbols+Rounded:opsz,wght,FILL,GRAD@48,400,0,0" rel="stylesheet">
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body class="auth-page">
    <div class="auth-container">
        <div class="auth-image login-image">
            <div class="auth-image-content">
                <h2>Bem-vindo de volta</h2>
                <p>Faca login usando suas informacoes pessoais para ficar conectado conosco.</p>
            </div>
        </div>
        <div class="auth-form">
            <h2>LOGIN</h2>
            
            <form asp-action="Login" method="post">
                <div asp-validation-summary="ModelOnly" class="validation-summary"></div>
                
                <div class="input-field">
                    <input asp-for="Email" type="email" required />
                    <label asp-for="Email">Email</label>
                    <span asp-validation-for="Email" class="field-validation"></span>
                </div>
                
                <div class="input-field">
                    <input asp-for="Password" type="password" required />
                    <label asp-for="Password">Senha</label>
                    <span asp-validation-for="Password" class="field-validation"></span>
                </div>
                
                <a href="#" class="forgot-pass-link">Esqueceu a senha?</a>
                
                <button type="submit" class="btn btn-primary btn-full">Entrar</button>
            </form>
            
            <div class="bottom-link">
                Nao tem uma conta?
                <a asp-action="Register">Cadastre-se</a>
            </div>
        </div>
    </div>
    
    <a href="/" class="back-home">
        <span class="material-symbols-rounded">arrow_back</span>
        Voltar ao Inicio
    </a>
</body>
</html>
